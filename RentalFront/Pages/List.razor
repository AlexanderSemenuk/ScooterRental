@page "/list"
@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient HttpClient

<h3>Доступні транспортні засоби для прокату</h3>
<style>

    body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('4357616.png');
        background-repeat: no-repeat;
        background-position: center;
        filter: blur(1px);
        opacity: 0.5;
        z-index: -1;
    }

</style>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Model</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var scooter in scooters)
            {
                <tr>
                    <td>ID: @scooter.Id</td>
                    <td>>Модель: @scooter.Model</td>
                    <td>Статус: @scooter.Status</td>
                </tr>
            }
        </tbody>
    </table>

@code {
    private List<Scooter> scooters;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            scooters = await HttpClient.GetFromJsonAsync<List<Scooter>>("api/scooters");
        }
        catch (Exception)
        {
            scooters = new List<Scooter>();
        }
    }

    public class Scooter
    {
        public int Id { get; set; }
        public string Model { get; set; }
        public string Status { get; set; }
    }
}

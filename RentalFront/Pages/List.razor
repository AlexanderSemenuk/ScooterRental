@page "/list"
@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient HttpClient

<h3>Доступні транспортні засоби для прокату</h3>

@if (scooters == null)
{
    <p>Завантаження...</p>
}
else if (scooters.Count == 0)
{
    <p>Немає доступних транспортних засобів.</p>
}
else
{
    <ul>
        @foreach (var scooter in scooters)
        {
            <li>
                <h4>ID: @scooter.Id</h4>
                <p>Модель: @scooter.Model</p>
                <p>Статус: @scooter.Status</p>
            </li>
        }
    </ul>
}

@code {
    private List<Scooter> scooters;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            scooters = await HttpClient.GetFromJsonAsync<List<Scooter>>("api/scooters");
        }
        catch (Exception)
        {
            scooters = new List<Scooter>();
        }
    }

    public class Scooter
    {
        public int Id { get; set; }
        public string Model { get; set; }
        public string Status { get; set; }
    }
}
